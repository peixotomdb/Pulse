{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Rabbithole",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "clipboard": {
        "all": true,
        "readText": true,
        "writeText": true
      },
      "notification": {
        "all": true
      },
      "fs": {
        "scope": ["$RESOURCE/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.rocketseat.uploadwidget",
      "icon": [
        "icons/android-chrome-192x192.png",
        "icons/android-chrome-512x512.png",
        "icons/apple-touch-icon.png",
        "icons/mstile-150x150.png",
        "icons/favicon-32x32.png",
        "icons/favicon-16x16.png"
      ],
      "resources": [
        "resources/*"
      ]
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "menubar",
        "width": 220,
        "height": 300,
        "visible": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "alwaysOnTop": true,
        "closable": false,
        "minimizable": false,
        "decorations": false,
        "focus": false,
        "transparent": true,
        "fileDropEnabled": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/favicon-32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  }
}
